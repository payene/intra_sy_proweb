<form class="form_horizontal form-inline" action="{{ path('stat_search') }}" method="post" >
	<div class="form-row">
        {{ form_label(formRech.debut, "Du") }}
            <div class="controls input-append date form_date" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
                {# Génération de l'input. #}
                {{ form_widget(formRech.debut, {'attr':{'class':'span2' }}) }}
                <span class="add-on"><i class="icon-remove"></i></span>
                <span class="add-on"><i class="icon-th"></i></span>
            </div>
    </div>


    <div class="form-row ">
        {{ form_label(formRech.fin, " Au ") }}
        <div class="controls input-append date form_date" data-date="" data-date-format="yyyy-mm-dd" data-link-field="dtp_input2" data-link-format="yyyy-mm-dd">
            {# Génération de l'input. #}
            {{ form_widget(formRech.fin, {'attr':{'class':'span2' }}) }}
            <span class="add-on"><i class="icon-remove"></i></span>
            <span class="add-on"><i class="icon-th"></i></span>
        </div>
    </div>

    <div class="form-row">
        {{ form_label(formRech.type, "Activité") }}
        {{ form_errors(formRech.type, {'attr': {'class': 'alert alert-error'} }) }}
        {# Génération de l'input. #}
        {{ form_widget(formRech.type, {'attr': {'style':'width:100px;'}}) }} 
    </div>

    <div class="form-row">
        {{ form_label(formRech.animatrice, "Login (Animatrice)") }}
        {{ form_errors(formRech.animatrice, {'attr': {'class': 'alert alert-error'} }) }}
        {# Génération de l'input. #}
        {{ form_widget(formRech.animatrice, {'attr': {'style':'width:100px;'}}) }} 
    </div>

    <div class="form-row">
        {{ form_widget(formRech.submit , {'attr': { 'class':'btn btn-success'} }) }} 
    </div>

    {{ form_rest(formRech) }}
	<br style="clear: both;" />
</form>