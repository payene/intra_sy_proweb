{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planning list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Heuredebut</th>
                <th>Heurefin</th>
                <th>Dateplanning</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
            <tr>
                <td><a href="{{ path('planning_show', { 'id': planning.id }) }}">{{ planning.id }}</a></td>
                <td>{{ planning.heureDebut }}</td>
                <td>{{ planning.heureFin }}</td>
                <td>{% if planning.datePlanning %}{{ planning.datePlanning|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ planning.createdAt }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('planning_show', { 'id': planning.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('planning_edit', { 'id': planning.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planning_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
