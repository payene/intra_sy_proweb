{% extends 'base.html.twig' %}

{% block body %}
    <h1>DemandeConge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ demandeConge.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{% if demandeConge.debut %}{{ demandeConge.debut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{% if demandeConge.fin %}{{ demandeConge.fin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ demandeConge.statut }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ demandeConge.motif }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('demandeconge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('demandeconge_edit', { 'id': demandeConge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
