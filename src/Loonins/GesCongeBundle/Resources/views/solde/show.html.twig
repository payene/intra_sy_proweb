{% extends 'base.html.twig' %}

{% block body %}
    <h1>Solde</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ solde.id }}</td>
            </tr>
            <tr>
                <th>Solde</th>
                <td>{{ solde.solde }}</td>
            </tr>
            <tr>
                <th>Dernieremaj</th>
                <td>{% if solde.derniereMaj %}{{ solde.derniereMaj|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('solde_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('solde_edit', { 'id': solde.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
