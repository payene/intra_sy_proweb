{% extends 'LooninsCalendarBundle::layout.html.twig' %}

{% block body %}
   <div class="container">
    <div class="row">
  {{ form_start(form, {'attr': {'class':'form_horizontal'}}) }}
        <div class="form-row">
            <label>Fichier :</label>
            {{ form_errors(form.source, {'attr': {'class': 'alert alert-error', 'style':'width:90px'} }) }}
            {# Génération de l'input. #}
            {{ form_widget(form.source, {'attr': {'class': 'span1', 'style':'width:250px'} }) }} 
        </div>
        
        <div class="form-row">
            <button class="btn btn-success" type="submit" style="margin-top: 25px"> Enregistrer </button>
        </div>
        {{ form_widget(form) }}
{{ form_end(form) }}
  </div>
</div>


<div class="text-center mb-10"> <h3>Calendrier des plannings</h3> </div>

<div class="container">
    <div class="row">
         <table  class="table table-striped  table-hover">
        <thead class="alert alert-success">
            <td style="border-radius: 0px 0px;padding:0px;vertical-align:middle;" > Date d'upload </td>
            <td style="border-radius: 0px 0px;padding:0px;vertical-align:middle;" > Fichier </td>
            <td style="border-radius: 0px 0px;padding:0px;vertical-align:middle;" > action   </td>
        </thead>
        <tbody>
            {% for planning in plannings %}
                <tr>
                    <td> {{ planning.createdAt|date('d-m-Y') }} </td>
                    <td> <a href="{{ asset('uploads/planning/planningConge/') }}{{ planning.source }}" target="_blank">voir</a> </td>
                    <td> <a href="" class="alert-success"> Supprimer </a> </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
