{% block body -%}
    <h3> Fiche salari&eacute; de
        <i> {{ entity.employe.nom  }}  {{ entity.employe.prenoms  }} </i>
    </h3>

    <form action="{{ path('grhfichesalarie_update', {'id':entity.id}) }}" method="POST">
        <div>
            {{ form_label(edit_form.titre, "Titre") }}
            {{ form_errors(edit_form.titre) }}
            {{ form_widget(edit_form.titre) }}
