        <div>
            {{ form_label(edit_form.type) }}
            {{ form_errors(edit_form.type) }}
            {{ form_widget(edit_form.type) }}
        </div>

{#        {{ form_widget(edit_form.submit , {'attr':{'class':'btn btn-success'} } ) }}#}
        {{ form_rest(edit_form) }}
    </form>


    {#  {{ form(edit_form) }}#}

    <ul class="record_actions">
        <li>
            <a href="{{ path('grhemployes_fiche',{'id':entity.employe.id}) }}">
                Retourner sur la fiche salari&eacute;
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

{% endblock %}
