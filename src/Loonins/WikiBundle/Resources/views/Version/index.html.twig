{% extends 'LooninsWikiBundle::layout.html.twig' %}

{% block body -%}
    <h1>Version list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Versecid</th>
                <th>Versectitre</th>
                <th>Verseccontent</th>
                <th>Versecdate</th>
                <th>Verseceditable</th>
                <th>Versecdel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('version_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.Id }}</td>
                <td>{{ entity.verTitre }}</td>
                <td>{{ entity.verContent }}</td>
                <td>{% if entity.verDate %}{{ entity.verDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.verEditable }}</td>
                <td>{{ entity.verDel }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('version_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('version_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
{#            <a href="{{ path('version_new', { 'art': entity.verArticle.Id}) }}">#}
                Create a new entry
{#            </a>#}
        </li>
    </ul>
    {% endblock %}
