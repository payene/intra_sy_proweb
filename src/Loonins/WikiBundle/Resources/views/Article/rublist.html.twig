{% extends 'LooninsWikiBundle::layout.html.twig' %}
{% block sidebar %}
<table class="table table-bordered record_properties" >
    <tbody>
        <tr>
            <td>
                {{ parent()}}
            </td>
        </tr>
        {% for element in catrubs %}
        <tr>
            <td colspan="2" >
                {{ element[0].cat }}
                {% for rub in element[1] %}
                <ul>
                    <li> <a href="{{ path('article_rublist', {'id':rub.id}) }}"> {{ rub.titre }} </a></li>
                </ul>
                {% endfor %}
            </td>
        </tr>
        {% endfor %}
        
    </tbody>
</table>
{% endblock %}
{% block body -%}
<h1> {{ rubrique.rubCat.cat }} </h1>
<table class="table table-striped record_properties">
    <thead>
        <tr>
            <th>Article</th>
            <th> Cr&eacute;&eacute; par </th>
            <th> Mise &agrave; jour </th>
        </tr>
    </thead>
    <tbody>
        {% for article in entities %}
        <tr>
            <td colspan>
                <a href="{{ path('article_show', {'id':article.id}) }}"> {{ article.artTitre }} </a>
            </td>
            <td colspan>
                <a href="#"> {{ article.artCreator.username }} </a>
            </td>
            <td colspan>
                <a href="#"> {{ article.updateDate|date('Y-m-d H:i:s') }} </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
