{% extends 'LooninsWikiBundle::layout.html.twig' %}

{% block body -%}
<h1>Rubrique list</h1>

<table style="width:auto;" class="table table-striped table-bordered records_list">
    <thead class="alert-info">
        <tr>
            <th>#</th>
            <th>Titre</th>
            <th>Cat&eacute;gorie</th>
            <th>Date</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td>{#<a href="{{ path('rubrique_show', { 'id': entity.id }) }}">{{ entity.id }}</a>#}</td>
            <td>{{ entity.titre }}</td>
            <td>{{ entity.rubCat.cat }}</td>
            <td>{% if entity.rubDate %}{{ entity.rubDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul style="list-style: none;">
                    <li>
                        <a href="{{ path('rubrique_show', { 'id': entity.id }) }}"> <i class="icon icon-eye-open"> </i> Afficher </a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('rubrique_new') }}">
            Nouveau
        </a>
    </li>
</ul>
    {% endblock %}
