{% extends 'LooninsSuiviBundle::layout.html.twig' %}

{% block body -%}
    

    <style type="text/css">
                    
        td{
            vertical-align: middle;
        }
    </style>
    
    <div style="height: auto;overflow-y: scroll;">
        <a class="btn btn-success" href="{{ path('animatrice_new') }}"> nouvelle affectation </a>
        <table class="table table-striped  table-hover">
            <thead >
                <tr>
                    <th>LOGIN</th>
                    <th>ANIMATRICE</th>
                    <th> DEBUT AFFECTATION </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="tbody" >
                {% for entity in entities %}
                    <tr>
                        <td style="padding:0px;vertical-align:middle" >{{ entity.login }}</td>
                        <td style="padding:0px;vertical-align:middle" >{{ entity.employe }}</td>
                        <td style="padding:0px;vertical-align:middle" >{% if entity.debutAffectation %}{{ entity.debutAffectation|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td style="padding:0px;vertical-align:middle">
                            <a class="alert-warning" href="{{ path('animatrice_edit', { 'id': entity.id }) }}"> Editer </a>
                            <a class="alert-danger" href="{{ path('animatrice_show', { 'id': entity.id }) }}"> D&eacute;saffecter </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <thead>
                <tr>
                    <th>LOGIN</th>
                    <th>ANIMATRICE</th>
                    <th>#</th>
                </tr>
            </thead>
        </table>
    </div>
   
    {% endblock %}
