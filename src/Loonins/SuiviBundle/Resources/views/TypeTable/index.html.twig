{% extends 'LooninsSuiviBundle::layout.html.twig' %}

{% block legend %}
    Type tables

    <a style="float: right;margin-left: 5px;" href="{{ path('typetable_new') }}" class="btn btn-primary" >
        Nouvelle table
    </a>
{% endblock %}

{% block body -%}
    <a class="btn btn-success" href="{{ path('typetable_new') }}"> Nouveau  </a>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Type Table</th>
                <th> Message / conversation </th>
                <th></th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.code }}</td>
                    <td>{{ entity.typeTable }}</td>
                    <td>
                        {% if entity.msgByConvRequired %}
                            Obligatoire
                        {% else %}
                            Facultatif
                        {% endif %}
                    </td>
                    <td>
                        <a class="btn btn-alert btn-primary" href="{{ path('typetable_alias', { 'id': entity.id }) }}"> Alias </a>
                    </td>
                    <td>
                        <a class="btn btn-alert btn-warning" href="{{ path('typetable_edit', { 'id': entity.id }) }}"> Editer </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% endblock %}
